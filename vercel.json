{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "includeFiles": ["templates/**", "static/**", "api/requirements.txt"]
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "api/main.py" }
  ]
}
